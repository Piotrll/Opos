  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug server as module",
      "type": "debugpy",
      "request": "launch",
      "module": "server.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "args": ["-l", "eng", "-dint", "100"]
    },
    {
      "name": "Python: Debug current file",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]

}